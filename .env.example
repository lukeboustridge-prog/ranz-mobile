# RANZ Mobile App Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# ENVIRONMENT
# ============================================
# Current environment: development | preview | production
# - development: Local development with hot reload, full logging
# - preview: EAS preview builds for testing, Sentry enabled
# - production: App Store/Play Store release, minimal logging
EXPO_PUBLIC_APP_ENV=development

# ============================================
# AUTHENTICATION
# ============================================
# Clerk Authentication (use your publishable key from Clerk dashboard)
# Get this from: https://dashboard.clerk.com/apps/<your-app>/instances/<instance>/api-keys
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# ============================================
# API
# ============================================
# Backend API URL (your deployed Next.js backend)
# - development: http://localhost:3000
# - preview: https://preview.reports.ranz.org.nz
# - production: https://reports.ranz.org.nz
EXPO_PUBLIC_API_URL=http://localhost:3000

# ============================================
# ERROR TRACKING
# ============================================
# Sentry DSN for crash reporting (preview and production only)
# Get this from: https://sentry.io/settings/<org>/<project>/keys/
# Leave empty for development - Sentry is disabled in development mode
EXPO_PUBLIC_SENTRY_DSN=
